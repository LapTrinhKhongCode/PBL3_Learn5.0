                                            <ul class="list-wrap">
                                                @if(item.lessons != null)
                                                {
                                                    foreach(var lesson in item.lessons)
                                                    {
                                                        <li class="course-item open-item">
                                                            @if(User.IsInRole("Admin"))
                                                            {
                                                                <a asp-action="Detail" asp-controller="Lesson" asp-route-id="@lesson.Id">
                                                                <span class="item-name">@lesson.LessonName</span>
                                                                </a>
                                                            }
                                                            else if(_context.usersCourses.Any(u=>u.UsersId==UserIdCurrent&&u.CourseId==Model.Id))
                                                            {
                                                                <a asp-action="Detail" asp-controller="Lesson" asp-route-id="@lesson.Id">
                                                                <span class="item-name">@lesson.LessonName</span>
                                                                </a>
                                                            }
                                                            else{
                                                                <a style="pointer-events: none;cursor: default;" asp-action="Detail" asp-controller="Lesson" asp-route-id="@lesson.Id">
                                                                <span class="item-name">@lesson.LessonName</span>
                                                                </a>
                                                            }
                                                            @if(User.IsInRole("Teacher")&&Teacher.Id==UserIdCurrent)
                                                            {
                                                            <span>|</span> <a asp-action="Edit" asp-controller="Lesson" asp-route-id="@lesson.Id">Chỉnh sửa bài học</a>
                                                            <span>|</span> <a class="delete-btn delete-lesson" data-id="@lesson.Id" style="cursor: pointer;">Xóa bài học</a>
                                                            
                                                            }
                                                        
                                                        </li>
                                                    }
                                                }
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-lg-5">
                <div class="create-test-exam">
                    @if(User.IsInRole("Teacher")&&Teacher.Id==UserIdCurrent)
                    {
                        <a asp-action="Create" asp-controller="Test" asp-route-CourseId="@Model.Id" class="btn-custom btn-primary">Tạo bài thi</a>
                    }
                    
                </div>
                <div class="test-exam">
                    <h4>Đề thi</h4>
                    @foreach(var item in Model.Tests)
                    {
                        <li style="padding: 5px;" >
                            
                            
                        @if(UserIdCurrent==Teacher.Id || _context.usersCourses.Any(c=>c.UsersId==UserIdCurrent)==true){
                                <a asp-action="DetailNote" asp-controller="Test" asp-route-id="@item.Id" style="min-width: 240px; display: inline-block;" >@item.TestName</a>
                            }
                            else if(_context.usersCourses.Any(c=>c.UsersId==UserIdCurrent&&c.CourseId==item.Id)==false)
                            {
                                <a asp-action="DetailNote" asp-controller="Test" asp-route-id="@item.Id" style="min-width: 240px; display: inline-block;pointer-events: none;cursor: default;" >@item.TestName</a>
                            }
                            @if(User.IsInRole("Teacher")&&UserIdCurrent==Teacher.Id)
                            {
                                <a class="delete-btn btn-danger delete-test" data-id="@item.Id" class="btn-danger" style="cursor: pointer;padding: 3px;border-radius: 5px;">Xóa</a>
                                <a asp-action="Edit" asp-controller="Question" asp-route-TestId="@item.Id" class="btn-warning" style="cursor: pointer;padding: 3px;border-radius: 5px;">Sửa</a>
                            }
                            
                        </li>
                    }
                </div>
            </div>
        </div>
    </div>
