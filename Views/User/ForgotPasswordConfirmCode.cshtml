
<div class="container">
    <h1 class="alert alert-danger" style="text-align: center; width: 60%;margin: 0 auto;">Please check your email for the code</h1>
</div>

<form method="post" asp-action="ForgotPasswordConfirmCode" style="margin:0 auto; width: 40%;" >
     <div asp-validation-summary="All"></div>
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <div class="form-group">
        <label name="code" class="control-label">Enter your code to confirm</label>
        <input name="code" class="form-control">
    </div>
    <hr>
    <input type="submit" value="Confirm" class="btn btn-info">
</form>


 @section scripts{
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }
