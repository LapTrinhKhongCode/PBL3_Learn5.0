@model Lesson
@{
    var chapterId=ViewBag.chapterId;
    
}
<form method="post" asp-action="Create" asp-route-chapterId="@chapterId" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for ="LessonName" class="control-label" ></label>
        <input type="text" asp-for="LessonName" class="form-control">
        <span asp-validation-for="LessonName" class="text-danger"></span>
    </div>
    <br>

    <div class="form-group">
        <label asp-for ="Description" class="control-label" ></label>
        <input type="text" asp-for="Description" class="form-control"> 
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <hr>


    <div class="form-group">
        <label asp-for ="FormFile" class="control-label" >File bài giảng</label>
        <input type="file" asp-for="FormFile" class="form-control">
        <span asp-validation-for="FormFile" class="text-danger"></span>
    </div> 
    <div class="form-group">
        <label asp-for ="DocumentFile" class="control-label" >File bài tập</label>
        <input type="file" asp-for="DocumentFile" class="form-control">
        <span asp-validation-for="DocumentFile" class="text-danger"></span>
    </div>
    <hr>
    <div class="form-group">
        <label asp-for ="IsFree" class="control-label" >Loại bài học</label>
        <select asp-for="IsFree" class="form-control" id="statusSelect">
            <option value="1">Không miễn phí</option>
            <option value="0">Miễn phí</option>
            
        </select>
        <span asp-validation-for="IsFree" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-success" value="Xác nhận">
</form>

<script>
    document.getElementById('statusSelect').addEventListener('change', function () {
        var priceField = document.getElementById('priceField');
        if (this.value === '1') {
            priceField.style.display = 'block';
             @* priceInput.value = ''; // Clear the value *@
        } else {
            priceField.style.display = 'none';
            @* priceInput.value = '0'; // Set value to 0 *@
        }
    });
</script>