@model Chapter

<form method="post" asp-action="Edit" asp-route-courseId="@Model.CourseId">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for ="ChapterName" class="control-label" ></label>
        <input type="text" asp-for="ChapterName" class="form-control">
        <span asp-validation-for="ChapterName" class="text-danger"></span>
    </div>

    
    <hr>
    
    <input type="submit" class="btn btn-success">
</form>